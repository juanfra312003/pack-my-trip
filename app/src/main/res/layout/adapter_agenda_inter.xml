<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/volcan"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:id="@+id/imageViewAdapterAgendaInter" />
    </androidx.cardview.widget.CardView>

    <TextView
            android:text="Experiencia Volcán Arenal"
            android:fontFamily="@font/coda"
            android:textSize="14sp"
            android:textColor="#092790"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/nombrePaqueteAdapterAgenda"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/card"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:text="Empieza el: "
            android:fontFamily="@font/coda"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewInicioPaqueteAgenda"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/card"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/nombrePaqueteAdapterAgenda" />

    <TextView
            android:text="21/04/2024"
            android:fontFamily="@font/coda"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textEditableFechaInicioAgendaInt"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/nombrePaqueteAdapterAgenda"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/textViewInicioPaqueteAgenda"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:text="Turista: "
            android:fontFamily="@font/coda"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/card"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewInicioPaqueteAgenda" />

    <TextView
            android:text="Juan Francisco Ramírez"
            android:fontFamily="@font/coda"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewInicioPaqueteAgenda"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>