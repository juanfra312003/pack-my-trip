<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="rectangle"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
    <ImageView
            android:id="@+id/imagenDashBoardAdapter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/volcan"
            android:scaleType="centerCrop"
            android:layout_gravity="center" />
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/nombrePaqueteAgInt"
            android:text="Nombre Paquete:"
            android:fontFamily="@font/coda"
            android:textSize="14sp"
            android:textColor="#092790"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/card"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/nombrePaqueteEditableAgInt"
            android:text="Experiencia VolcÃ¡n Arenal"
            android:fontFamily="@font/coda"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/card"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/nombrePaqueteAgInt"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:text="Precio: "
            android:fontFamily="@font/coda"
            android:textSize="14sp"
            android:textColor="#092790"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/precioAgInt"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/card"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/nombrePaqueteEditableAgInt"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/editablePrecioAgInt"
            android:text="150.0 $"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coda"
            android:textSize="14sp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/card"
            app:layout_constraintTop_toBottomOf="@+id/precioAgInt"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>